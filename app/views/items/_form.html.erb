  </p>

  <p>
    <%= form.label :end_date %><br>
    <%= form.text_area :end_date%>
  </p>

  <p>
    <%= form.label :category %><br>
    <%= form.text_area :category%>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>