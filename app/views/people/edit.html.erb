<div class='container-fluid mt-5'>
  <div class='row justify-content-center'>
    <div class='col-4'>
      <div class='card'>
          <div class='card-body'>
            <h1>Update Person</h1>
            <%= form_with scope: :person, local: true do |form| %>
              <div class='form-group'>
                <%= form.label :fname, "First Name" %><br>
                <%= form.text_field :fname, placeholder: @person.fname, :class => 'form-control' %>
              </div>

              <div class='form-group'>
                <%= form.label :lname, "Last Name" %><br>
                <%= form.text_field :lname, placeholder: @person.lname, :class => 'form-control' %>
              </div>

              <div class='form-group'>
                <%= form.label :address, "Address" %><br>
                <%= form.text_field :addr, placeholder: @person.addr, :class => 'form-control' %>
              </div>

              <div class='form-group'>
                <%= form.label :phone, "Phone Number" %><br>
                <%= form.text_field :phone, placeholder: @person.phone, :class => 'form-control' %>
              </div>

              <div class='form-group'>
                <%= form.label :avatar, "Profile Picture" %><br>
                <%= form.file_field :avatar, :class => 'form-control-file' %>
              </div>

              <div>
                <%= form.submit 'Update', :class => 'btn btn-blue' %>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
