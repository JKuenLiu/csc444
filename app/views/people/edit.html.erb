<div class="container-fluid mt-5">
  <div class="row justify-content-center">
    <div class="col-sm-5">
      <div class="card">
          <div class="card-body">
            <h1>Edit Profile</h1>
            <%= form_with(model: @person, local: true) do |form| %>
              <div class='form-group'>
                <%= form.label :fname, "First Name" %><br>
                <%= form.text_field :fname, placeholder: @person.fname, :class => "form-control" %>
              </div>

              <div class='form-group'>
                <%= form.label :lname, "Last Name" %><br>
                <%= form.text_field :lname, placeholder: @person.lname, :class => "form-control" %>
              </div>

              <div class='form-group'>
                <%= form.label :street, "Street Address" %><br>
                <%= form.text_field :street, placeholder: @person.street, :class => "form-control" %>
              </div>

              <div class='form-group'>
                <%= form.label :city, "City" %><br>
                <%= form.text_field :city, placeholder: @person.city, :class => "form-control" %>
              </div>

              <div class='form-group'>
                <%= form.label :province, "Province" %><br>
                <%= form.text_field :province, placeholder: @person.province, :class => "form-control" %>
              </div>

              <div class='form-group'>
                <%= form.label :country, "Country" %><br>
                <%= form.text_field :country, placeholder: @person.country, :class => "form-control" %>
              </div>

              <div class="form-group">
                <%= form.label :phone, "Phone Number" %><br>
                <%= form.text_field :phone, placeholder: @person.phone, :class => "form-control" %>
              </div>

              <div class="form-group">
                <%= form.label :avatar, "Profile Picture" %><br>
                <%= form.file_field :avatar, :class => "form-control-file" %>
              </div>

              <div class="row justify-content-center">
                <%= form.submit 'Update', :class => "btn btn-blue" %>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
