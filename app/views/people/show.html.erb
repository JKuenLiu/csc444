<div class='container-fluid mt-3'>
	<div class='row pt-4 justify-content-center'>
		<div class='col-4-sm pl-3 pr-3'>
			<div class="card border-0">
                <img class="card-img-top img-responsive">
                    <%= image_tag(@person.avatar, style:"width:100%", :class => "rounded") %>
                </img>
	        	<div class="card-body">
	        		<div class='row justify-content-center'>
	        			<div class="col">
		        			<p>
							  <strong>First Name:</strong>
							  <%= @person.fname %>
							</p>
							<p>
							  <strong>Last Name:</strong>
							  <%= @person.lname %>
							</p>
                            <% if @is_current_user %>
    							<p>
    							  <strong>Street Address:</strong>
    							  <%= @person.street %>
    							</p>
                                <p>
                                  <strong>City:</strong>
                                  <%= @person.city %>
                                </p>
                                <p>
                                  <strong>Province:</strong>
                                  <%= @person.province %>
                                </p>
                                <p>
                                  <strong>Country:</strong>
                                  <%= @person.country %>
                                </p>
                            <% else %>
                                <p>
                                  <strong>Email:</strong>
                                  <%= User.find_by_id(@person.user_id).email %>
                                </p>
                            <% end %>
							<p>
							  <strong>Phone Number:</strong>
							  <%= @person.phone %>
							</p>
                  <p>
                    <strong>Community Rating:</strong>
                    <% rating = @person.rating %>
                    <% if rating %>
                      <%= rating.round(2) %>/5
                    <% else %>
                      <%= "No Ratings Yet" %>
                    <% end %>
                  </p>
						</div>
	        		</div>
                    <% if @is_current_user %>
                        <%= link_to 'Edit Profile', edit_person_path %>
                    <% else %>
                        <%= link_to 'Report This User', new_report_path(person_id: @person.id) %>
                    <% end %>
                    <% if current_user.admin %>
                      <%= link_to 'View Reports', reports_path(person_id: @person.id) %>
                    <% end %>
	        	</div>
	        </div>
		</div>
		<div class='col-8-sm pl-3'>
            <h3>Recent Reviews for <%= @person.fname %></h3>
            <% if @person.reviews.any? %>
              <% reviews = Review.find(@person.review_ids.last(3)) %>
              <% reviews.reverse.each do |review| %>
                    <div class="card border-0">
                      <div class="card-body">
    <!--                        Interaction.find(Review.find(@person.review_ids .first).interaction_id).person_id-->
                          <% reviewer = Person.find(Interaction.find(review.interaction_id).person_id) %>
                          <h6>Review by <%= reviewer.fname %> <%= reviewer.lname %>: <%= review.rating %>/5 </h6>
                          <p><%= review.comment %></p>
                      </div>
                    </div>
              <% end %>
              <%= link_to 'See All Reviews', person_reviews_path(person_id: @person.id) %>
            <% end %>
		</div>
	</div>
</div>
