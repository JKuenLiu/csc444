<%= render 'error' %>

<div class='container-fluid mt-5'>
  <div class='row justify-content-center'>
    <div class='col-sm-5'>
      <div class='card'>
          <div class='card-body'>
            <h1>Personal Information</h1>
            <%= form_with scope: :person, url: people_path, local: true do |form| %>
              <div class='form-group'>
                <%= form.label :fname, "First Name" %><br>
                <%= form.text_field :fname, :class => 'form-control' %>
              </div>

              <div class='form-group'>
                <%= form.label :lname, "Last Name" %><br>
                <%= form.text_field :lname, :class => 'form-control' %>
              </div>

              <div class='form-group'>
                <%= form.label :street, "Street Address" %><br>
                <%= form.text_field :street, :class => 'form-control' %>
              </div>

              <div class='form-group'>
                <%= form.label :city, "City" %><br>
                <%= form.text_field :city, :class => 'form-control' %>
              </div>

              <div class='form-group'>
                <%= form.label :province, "Province" %><br>
                <%= form.text_field :province, :class => 'form-control' %>
              </div>

              <div class='form-group'>
                <%= form.label :country, "Country" %><br>
                <%= form.text_field :country, :class => 'form-control' %>
              </div>

              <div class='form-group'>
                <%= form.label :phone, "Phone Number" %><br>
                <%= form.text_field :phone, :class => 'form-control' %>
              </div>

              <div class='form-group'>
                <%= form.label :avatar, "Profile Picture" %><br>
                <%= form.file_field :avatar, :class => 'form-control-file' %>
              </div>

              <div>
                <%= form.submit 'Submit', :class => 'btn btn-blue' %>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
