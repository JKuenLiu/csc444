<div class="container-fluid mt-5">
  <div class="row justify-content-center">
    <div class="col-sm-5">
      <div class="card">
          <div class="card-body">
            <h1>Personal Information</h1>
            <%= form_with scope: :person, url: people_path, local: true do |form| %>
              <div class="form-group">
                <%= form.label :fname, "First Name" %><span class="text-error"> *</span>
                <%= form.text_field :fname, :class => "form-control" %>
                <% @person.errors[:fname].each do |msg| %>
                  <small class="form-text text-error">First Name <%= msg %></small>
                <% end %>
              </div>

              <div class="form-group">
                <%= form.label :lname, "Last Name" %><span class="text-error"> *</span>
                <%= form.text_field :lname, :class => "form-control" %>
                <% @person.errors[:lname].each do |msg| %>
                  <small class="form-text text-error">Last Name <%= msg %></small>
                <% end %>
              </div>

              <div class="form-group">
                <%= form.label :street, "Street Address" %><span class="text-error"> *</span>
                <%= form.text_field :street, :class => 'form-control' %>
                <% @person.errors[:street].each do |msg| %>
                  <small class="form-text text-error">Street Adrress <%= msg %></small>
                <% end %>
              </div>

              <div class="form-group">
                <%= form.label :city, "City" %><span class="text-error"> *</span>
                <%= form.text_field :city, :class => 'form-control' %>
                <% @person.errors[:city].each do |msg| %>
                  <small class="form-text text-error">City <%= msg %></small>
                <% end %>
              </div>

              <div class="form-group">
                <%= form.label :province, "Province" %><span class="text-error"> *</span>
                <%= form.text_field :province, :class => "form-control" %>
                <% @person.errors[:province].each do |msg| %>
                  <small class="form-text text-error">Province <%= msg %></small>
                <% end %>
              </div>

              <div class="form-group">
                <%= form.label :country, "Country" %><span class="text-error"> *</span>
                <%= form.text_field :country, :class => "form-control" %>
                <% @person.errors[:country].each do |msg| %>
                  <small class="form-text text-error">Country <%= msg %></small>
                <% end %>
              </div>

              <div class="form-group">
                <%= form.label :phone, "Phone Number" %><br>
                <%= form.text_field :phone, :class => "form-control" %>
              </div>

              <div class="form-group">
                <%= form.label :avatar, "Profile Picture" %><br>
                <%= form.file_field :avatar, :class => "form-control-file" %>
              </div>

              <div class="row justify-content-center">
                <%= form.submit 'Submit', :class => "btn btn-blue" %>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
