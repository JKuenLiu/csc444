<div class="container-fluid">
  <p class="navbar-text pull-right">
      <% if user_signed_in? %>
        Logged in as <strong> <%= current_user.email %></strong>.
      <% end %>
  </p>

  <%= form_tag(homepage_index_path, method: :get, :class => "form-inline my-2 my-lg-0") do %>
    <%= text_field_tag :term, params[:term], :class => "form-control mr-sm-2" %>
    <%= submit_tag 'Search', :class => "btn btn-blue my-2 my-sm-0"%>
  <% end %>

  <div class="row mt-4">
    <% if @all_items %>
        <% @all_items.each_with_index do |item, index| %>
            <div class="col-2 mb-3">
                <div class="card">
                    <div class="card-body">
                        <% if !item.photos.empty? %>
                            <%= image_tag(item.photos[0], style:'width:100%', :class => 'dblock w-100') %>
                        <% else %>
                            <%= image_tag('default_img.png', style:'width:100%', :class => 'dblock w-100') %>
                        <% end %>
                        <div class="row justify-content-center">
                          <%= link_to item.name, item_path(item) %>
                          <% if !@all_items_distance.blank? %>
                             : <%= @all_items_distance[item.id] %> km away
                          <% end %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    <% end %>
  </div>
  <%= link_to 'Add Item', new_item_path %>
</div>
