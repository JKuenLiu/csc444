

<div class="container-fluid mt-5">
    <h1> <%= @owner.fname %>'s Reviews </h1>

  <div class="row">
    <% if @reviews %>
      <% @reviews.each_with_index do |item, index| %>
        <div class="col-2 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="row justify-content-center">
                <% reviewer = Person.find(Interaction.find(item.interaction_id).person_id) %>
                <h5>Review by <%= reviewer.fname %> <%= reviewer.lname %>:</h5>
                <h6><%= @owner.rating %>/5.0</h6>
                <p><%= item.comment %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>