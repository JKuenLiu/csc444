<%= form_for @review, url: {action: :create}, local: true do |form| %>


  <div class='form-group'>
    <%= form.label :rating %><br>
    <%= form.number_field :rating, in: 1.0..5.0, step: 0.5, :class => 'form-control', :row => '3' %>
    <%#= range_field_tag :rating, in: 1..5, :class => 'form-control', :row => '3' %>
<!--    <div id='rating_output'></div>-->
    <%#= range_field_tag :rating, '', :class => 'form-control', :row => '3' %>
  </div>

  <div class='form-group'>
    <%= form.label :comment %><br>
    <%= form.text_area :comment, :class => 'form-control', :row => '3' %>
  </div>

  <%= form.hidden_field :interaction_id, :value => @interaction.id %>
  <%= form.submit 'Submit', :class => 'btn btn-blue'%>

<% end %>